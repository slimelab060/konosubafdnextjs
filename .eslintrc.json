{
  "plugins": ["tailwindcss"],
  "extends": [
    "next/core-web-vitals",
    "plugin:import/recommended",
    "plugin:import/warnings",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],

  "rules": {
    "@next/next/no-img-element": "off",
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        }
      }
    ]
  },

  "settings": {
    "tailwindcss": {
      "groupByResponsive": true,
      "whitelist": []
    }
  }
}
